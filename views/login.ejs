<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="./img/logo.png" type="image/jpg">
    <link rel="stylesheet" href="./css/styles.css">
    <link rel="stylesheet" href="./css/login.css">
    <script src="https://kit.fontawesome.com/73c17b3c10.js" crossorigin="anonymous"></script>
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <title>Log In | Fitness Club</title>
</head>
<body>

    <!-- PRELOADER START -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>  
    <!-- PRELOADER END -->

    <%- include('partials/header', { activePage: 'login', authenticated: authenticated, messages: messages }) %>

    <!-- CONTACT START  -->
    <section class="contact-section" id="add-margin">
        <div class="login-form">
            <form action="/login" method="post" novalidate>
                <h1>Login</h1>
                <p>
                Already have an account? Login in or
                <a href="/signup"><strong>Sign Up</strong></a>
                </p>
                
                <input type="hidden" name="csrfmiddlewaretoken" value="A0UBSOyPgckzkFInqdswsaNwP1zgk03fXOnARavp5EdoaP6etmbJ3PCRACloNxIw">
                
                <i style="color: red;font-style: normal;"></i> <label for="id_username">Username:</label> <input type="text" name="username" autofocus autocapitalize="none" autocomplete="username" maxlength="150" required id="id_username">
                
                <i style="color: red;font-style: normal;"></i> <label for="id_password">Password:</label> <input type="password" name="password" autocomplete="current-password" required id="id_password">
                
        
                <label>
                <input type="checkbox" checked="checked" name="remember" style="margin-bottom: 15px"/>
                Remember me
                </label>
        
                <p>
                    By creating an account you agree to our Terms & Privacy.
                </p>
        
                <div class="buttons">
                <button type="submit" class="signupbtn">Log In</button>
                    <a href="/"><button type="button" class="cancelbtn">Cancel</button></a>
                </div>
                
            </form>
        </div>
    </section>
    <!-- CONTACT END  -->

    <%- include('partials/footer', { activePage: 'login' }) %>

    <script src="./js/jquery.min.js"></script>
    <script src="./js/scripts.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init();
    </script>
</body>
</html>